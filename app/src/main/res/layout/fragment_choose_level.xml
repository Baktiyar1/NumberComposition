<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.ChooseLevelFragment">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/choose_level_text"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btn_level_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_test"
        android:backgroundTint="@color/color_level_test"
        android:textSize="18sp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"/>

    <Button
        android:id="@+id/btn_level_easy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_easy"
        android:backgroundTint="@color/color_level_easy"
        android:textSize="18sp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"/>

    <Button
        android:id="@+id/btn_level_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_normal"
        android:backgroundTint="@color/color_level_normal"
        android:textSize="18sp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"/>

    <Button
        android:id="@+id/btn_level_hard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_hard"
        android:backgroundTint="@color/color_level_hard"
        android:textSize="18sp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"/>

</LinearLayout>